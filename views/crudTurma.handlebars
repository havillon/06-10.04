<div class="container center-center">
<div class="row">
    <div class="col-6">        
        <form action="inserirTurma" method="POST" class="card col-12 border-0 center-vertical">
            <h2 class="text-center">Cadastrar Turma</h2>
            <div class="form-group py-3">
                <input type="text" name="tur_nome" id="tur_nome" placeholder="Nome..." class=" border-purple w-100 border-top-0 border-left-0 border-right-0">
            </div>
            <input type="submit" value="Cadastrar"  class="mb-4 btn bg-purple text-white">
        </form>
    </div>
    <div class="col-6">
        <table class="table table-hover center-vertical">
            <thead>
                <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">Atualizar</th>
                    <th scope="col">Remover</th>
                </tr>
            </thead>
            <tbody>
                {{#data}}
                    <tr>
                        <td>{{tur_nome}}</td>
                        <td><a href="atualizarTurma/{{tur_id}}" class="text-purple">Atualizar</a></td>
                        <td><a href="removerTurma/{{tur_id}}" class="text-purple">Remover</a></td>
                    </tr>
                {{/data}}
            </tbody>
        </table>
    </div>
