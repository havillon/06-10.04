<div class="container center-center">
	<div class="row">
		<div class="col-6">
			<form action="inserirDisciplina" method="POST" class="card col-12 border-0 center-vertical">
				<h2 class="text-center">Cadastrar Disciplina</h2>
				<div class="form-group py-3">
					<input class="border-purple w-100 border-top-0 border-left-0 border-right-0" type="text" name="dis_nome" id="dis_nome" placeholder="Nome...">
				</div>
				<input class="mb-4 btn bg-purple text-white" type="submit" value="Cadastrar">
			</form>
		</div>
		<div class="col-6">
			<div class="tabela">
				<table class="table table-hover center-vertical">
				<thead>
					<tr>
						<th scope="col">Nome</th>
						<th scope="col">Atualizar</th>
						<th scope="col">Remover</th>
					</tr>
				</thead>
				<tbody>
					{{#data}}
						<tr>
							<td>{{dis_nome}}</td>
							<td><a href="atualizarDisciplina/{{dis_id}}" class="text-purple">Atualizar</a></td>
							<td><a href="removerDisciplina/{{dis_id}}" class="text-purple">Remover</a></td>
						</tr>
					{{/data}}
				</tbody>
				</table>
			</div>
		</div>
	</div>
</div>